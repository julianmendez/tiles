
directive lean
import Soda.tiles.fairness.tool.TileMessage
import Soda.tiles.fairness.tile.AllEqual1Tile

/**
 * This is a composite tile for the pipeline of the complement of the Gini index.
 */

class AllAgentAccumulatesTile

  abstract
    utility : Resource -> Measure

  all_agent_tile = AllAgentTile .mk

  accumulates_tile = AccumulatesTile .mk (utility)

  apply (message : TileMessage [Boolean] ) : TileMessage [Seq [Measure] ] =
    accumulates_tile .apply (
      all_agent_tile .apply (
        message
      )
    )

end

