
directive lean
import Soda.tiles.fairness.tool.TileMessage


/**
 * This tile returns the first element of a triple.
 */

class ProjectionTripleFstTile

  abstract

  get_fst [A : Type] [B : Type] [C : Type] (triple : TileTriple [A] [B] [C] ) : A =
    triple .fst

  apply [A : Type] [B : Type] [C : Type] (message : TileMessage [TileTriple [A] [B] [C] ] )
      : TileMessage [A] =
    ApplyTile .mk [TileTriple [A] [B] [C] ] [A] (get_fst)
      .apply (message)

end

