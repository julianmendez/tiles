
directive lean
import Soda.tiles.fairness.tool.TileMessage


/**
 * This tile returns the second element of a triple.
 */

class ProjectionTripleSndTile

  abstract

  get_snd [A : Type] [B : Type] [C : Type] (triple : TileTriple [A] [B] [C] ) : B =
    triple .snd

  apply [A : Type] [B : Type] [C : Type] (message : TileMessage [TileTriple [A] [B] [C] ] )
      : TileMessage [B] =
    ApplyTile .mk [TileTriple [A] [B] [C] ] [B] (get_snd)
      .apply (message)

end

