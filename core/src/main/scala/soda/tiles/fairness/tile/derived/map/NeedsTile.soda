
directive lean
import Soda.tiles.fairness.tool.TileMessage
import soda.tiles.fairness.tile.primitive.MapTile

/**
 * This tile is a particular case of an 'MapTile', where the attribute is 'needed'.
 */

class NeedsTile

  abstract
    q : Agent -> Measure

  map_tile = MapTile .mk [Agent] [Measure] (q)

  apply (message : TileMessage [Seq [Agent] ] ) : TileMessage [Seq [Measure] ] =
    map_tile .apply (
      message
    )

end

