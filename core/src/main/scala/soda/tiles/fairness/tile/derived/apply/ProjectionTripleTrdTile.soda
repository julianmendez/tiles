
directive lean
import Soda.tiles.fairness.tool.TileMessage


/**
 * This tile returns the third element of a triple.
 */

class ProjectionTripleTrdTile

  abstract

  get_trd [A : Type] [B : Type] [C : Type] (triple : TileTriple [A] [B] [C] ) : C =
    triple .trd

  apply [A : Type] [B : Type] [C : Type] (message : TileMessage [TileTriple [A] [B] [C] ] )
      : TileMessage [C] =
    ApplyTile .mk [TileTriple [A] [B] [C] ] [C] (get_trd)
      .apply (message)

end

