
directive lean
import Soda.tiles.fairness.tool.TileMessage


/**
 * This tile returns a sorted sequence of agents, where each agent occurs exactly once.
 */

class AllAgentTile

  abstract

  all_agents (message : TileMessage [Boolean] ) : Seq [Agent] =
      ( (message .outcome) .assignments)
        .map (lambda assignment --> assignment .agent)
        .distinct
        .sorted

  apply (message : TileMessage [Boolean] ) : TileMessage [Seq [Agent] ] =
    TileMessageBuilder .mk .build (message .context) (message .outcome) (
      all_agents (message)
    )

end

