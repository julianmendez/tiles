
directive lean
import Soda.tiles.fairness.tool.TileMessage


/**
 * This tile returns the second element of a pair.
 */

class ProjectionPairSndTile [A : Type] [B : Type]

  abstract

  get_snd (pair : TilePair [A] [B] ) : B =
    pair .snd

  apply_tile = ApplyTile .mk [TilePair [A] [B] ] [B] (get_snd)

  apply (message : TileMessage [TilePair [A] [B] ] ) : TileMessage [B] =
    apply_tile .apply (
      message
    )

end

