
directive lean
import Soda.tiles.fairness.tool.TileMessage


/**
 * This tile returns the first element of a pair.
 */

class ProjectionPairFstTile

  abstract

  get_fst [A : Type] [B : Type] (pair : TilePair [A] [B] ) : A =
    pair .fst

  apply [A : Type] [B : Type] (message : TileMessage [TilePair [A] [B] ] ) : TileMessage [A] =
    ApplyTile .mk [TilePair [A] [B] ] [A] (get_fst)
      .apply (message)

end

