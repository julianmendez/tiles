
directive lean
import Soda.tiles.fairness.tool.TileMessage


/**
 * This tile returns the first element of a pair.
 */

class ProjectionPairFstTile [A : Type] [B : Type]

  abstract

  get_fst (pair : TilePair [A] [B] ) : A =
    pair .fst

  apply_tile = ApplyTile .mk [TilePair [A] [B] ] [A] (get_fst)

  apply (message : TileMessage [TilePair [A] [B] ] ) : TileMessage [A] =
    apply_tile .apply (
      message
    )

end

